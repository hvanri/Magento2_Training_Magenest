<script>
    function showPromotionPopup() {
        // Ki·ªÉm tra localStorage xem c√≥ ·∫©n popup h√¥m nay kh√¥ng
        const today = new Date().toDateString();
        const hidePopupToday = localStorage.getItem('hidePromotionPopup');

        if (hidePopupToday === today) {
            return;
        }

        document.getElementById('promotion-popup').style.display = 'block';
        document.body.style.overflow = 'hidden';
    }

    function closePromotionPopup() {
        document.getElementById('promotion-popup').style.display = 'none';
        document.body.style.overflow = 'auto';

        // L∆∞u tr·∫°ng th√°i n·∫øu checkbox ƒë∆∞·ª£c ch·ªçn
        const dontShowCheckbox = document.getElementById('dont-show-popup');
        if (dontShowCheckbox && dontShowCheckbox.checked) {
            const today = new Date().toDateString();
            localStorage.setItem('hidePromotionPopup', today);
        }
    }

    function copyCouponCode(code) {
        navigator.clipboard.writeText(code).then(function() {
            // Hi·ªÉn th·ªã th√¥ng b√°o ƒë√£ copy
            const notification = document.createElement('div');
            notification.innerHTML = 'ƒê√£ copy m√£: ' + code;
            notification.style.cssText = `
            position: fixed;
            top: 20px;
            right: 20px;
            background: #28a745;
            color: white;
            padding: 10px 15px;
            border-radius: 4px;
            z-index: 10000;
            font-size: 14px;
        `;
            document.body.appendChild(notification);

            setTimeout(() => {
                document.body.removeChild(notification);
            }, 2000);
        });
    }

    // Hi·ªÉn th·ªã popup sau khi trang load xong
    document.addEventListener('DOMContentLoaded', function() {
        setTimeout(showPromotionPopup, 2000); // Hi·ªÉn th·ªã sau 2 gi√¢y
    });

    // ƒê√≥ng popup khi click overlay
    document.addEventListener('click', function(e) {
        if (e.target.classList.contains('popup-overlay')) {
            closePromotionPopup();
        }
    });

    // ƒê√≥ng popup khi nh·∫•n ESC
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closePromotionPopup();
        }
    });
</script>
