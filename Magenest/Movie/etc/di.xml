<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
        <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
            <arguments>
                <argument name="collections" xsi:type="array">
                    <item name="magenest_movie_listing_data_source" xsi:type="string">Magenest\Movie\Model\ResourceModel\Movie\Grid\Collection</item>
                    <item name="magenest_director_listing_data_source" xsi:type="string">Magenest\Movie\Model\ResourceModel\Director\Grid\Collection</item>
                    <item name="magenest_actor_listing_data_source" xsi:type="string">Magenest\Movie\Model\ResourceModel\Actor\Grid\Collection</item>
                </argument>
            </arguments>
        </type>
        <virtualType name="Magenest\Movie\Model\ResourceModel\Movie\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
            <arguments>
                <argument name="mainTable" xsi:type="string">magenest_movie</argument>
                <argument name="resourceModel" xsi:type="string">Magenest\Movie\Model\ResourceModel\Movie</argument>
            </arguments>
        </virtualType>
    <virtualType name="Magenest\Movie\Model\ResourceModel\Director\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">magenest_director</argument>
            <argument name="resourceModel" xsi:type="string">Magenest\Movie\Model\ResourceModel\Director</argument>
        </arguments>
    </virtualType>
    <virtualType name="Magenest\Movie\Model\ResourceModel\Actor\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">magenest_actor</argument>
            <argument name="resourceModel" xsi:type="string">Magenest\Movie\Model\ResourceModel\Actor</argument>
        </arguments>
    </virtualType>

    <type name="Magento\Checkout\CustomerData\Cart">
        <plugin name="magenest_movie_cart_item_plugin" type="Magenest\Movie\Plugin\CartItemPlugin" />
    </type>
    <type name="Magento\Checkout\Block\Cart\Item\Renderer">
        <plugin name="child_product_cart_plugin" type="Magenest\Movie\Plugin\CartItemRenderer" />
    </type>
    <type name="Magento\Checkout\Model\Cart">
        <plugin name="magenest_movie_cart_child_item_plugin" type="Magenest\Movie\Plugin\CartPlugin"/>
    </type>
    <type name="Magento\Checkout\CustomerData\DefaultItem">
        <plugin name="magenest_movie_cart_childitem_plugin"  type="Magenest\Movie\Plugin\DefaultItemPlugin"/>
    </type>

    <type name="Magenest\Movie\Model\ImageUploader">
        <arguments>
            <argument name="baseTmpPath" xsi:type="string">tmp/customer/avatar</argument>
            <argument name="basePath" xsi:type="string">customer/avatar</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
            </argument>
        </arguments>
    </type>

    <virtualType name="Magento\Sales\Model\ResourceModel\Order\Grid" type="Magento\Sales\Model\ResourceModel\Grid">
        <arguments>
            <argument name="columns" xsi:type="array">
                <item name="odd_or_even" xsi:type="string">sales_order.odd_or_even</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Customer\Api\CustomerRepositoryInterface">
        <plugin name="magenest_customer_save_plugin"
                type="Magenest\Movie\Plugin\CustomerSavePlugin" />
    </type>
</config>
