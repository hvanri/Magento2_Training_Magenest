<?xml version="1.0"?>
<!-- File: app/code/Vendor/Banner/etc/db_schema.xml -->
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="magenest_banner" resource="default" engine="innodb" comment="Banner Table">
        <column xsi:type="int" name="banner_id" nullable="false" identity="true" unsigned="true" comment="Banner ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Banner Name"/>
        <column xsi:type="smallint" name="enabled" nullable="false" default="1" comment="Enabled"/>
        <column xsi:type="varchar" name="title" nullable="true" length="255" comment="Banner Title"/>
        <column xsi:type="varchar" name="upload_image" nullable="true" length="255" comment="Image Path"/>
        <column xsi:type="varchar" name="link" nullable="true" length="255" comment="Banner Link"/>
        <column xsi:type="text" name="add_text" nullable="true" comment="Additional Text"/>

        <!-- New fields -->
        <column xsi:type="int" name="position" nullable="false" default="1" comment="Banner Position"/>
        <column xsi:type="int" name="sort_order" nullable="false" default="0" comment="Sort Order"/>

        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Created At"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="banner_id"/>
        </constraint>

        <index referenceId="MAGENEST_BANNER_ENABLED_IDX">
            <column name="enabled"/>
        </index>

        <index referenceId="MAGENEST_BANNER_POSITION_IDX">
            <column name="position"/>
        </index>
    </table>
</schema>
